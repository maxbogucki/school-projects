<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmFinder_Bogucki.Pages.DetailsPage"
             Title="Film Details">

    <Grid RowDefinitions="Auto,*" BackgroundColor="#F5F5F5">

        <!-- Header -->
        <Grid Grid.Row="0" BackgroundColor="#512DA8" Padding="20,15">
            <Label Text="Film Details" 
                   TextColor="White" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Loading Indicator -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                 IsRunning="True"
                                 Color="#512DA8"
                                 HeightRequest="50"
                                 WidthRequest="50"
                                 HorizontalOptions="Center"/>

                <!-- Details Container -->
                <VerticalStackLayout x:Name="DetailsContainer" 
                                    Spacing="15"
                                    IsVisible="False">

                    <!-- Poster and Basic Info -->
                    <Border BackgroundColor="White" 
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 8"
                            Padding="15">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="15">

                            <!-- Poster -->
                            <Border Grid.Row="0"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 10"
                                    HeightRequest="400"
                                    WidthRequest="270"
                                    HorizontalOptions="Center">
                                <Image x:Name="PosterImage"
                                       Aspect="AspectFit"/>
                            </Border>

                            <!-- Title and Year -->
                            <VerticalStackLayout Grid.Row="1" Spacing="5">
                                <Label x:Name="TitleLabel"
                                       FontSize="22"
                                       FontAttributes="Bold"
                                       TextColor="#333333"
                                       HorizontalOptions="Center"
                                       HorizontalTextAlignment="Center"/>
                                <Label x:Name="YearLabel"
                                       FontSize="16"
                                       TextColor="#666666"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <!-- Plot -->
                    <Border BackgroundColor="White" 
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 8"
                            Padding="15">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
                        </Border.Shadow>
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Plot"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#512DA8"/>
                            <Label x:Name="PlotLabel"
                                   FontSize="14"
                                   TextColor="#333333"
                                   LineBreakMode="WordWrap"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Credits -->
                    <Border BackgroundColor="White" 
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 8"
                            Padding="15">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
                        </Border.Shadow>
                        <VerticalStackLayout Spacing="12">
                            <Label Text="Credits"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#512DA8"/>

                            <VerticalStackLayout Spacing="5">
                                <Label Text="Director"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#666666"/>
                                <Label x:Name="DirectorLabel"
                                       FontSize="14"
                                       TextColor="#333333"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="5">
                                <Label Text="Writer"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#666666"/>
                                <Label x:Name="WriterLabel"
                                       FontSize="14"
                                       TextColor="#333333"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="5">
                                <Label Text="Stars"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#666666"/>
                                <Label x:Name="StarsLabel"
                                       FontSize="14"
                                       TextColor="#333333"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Additional Info -->
                    <Border BackgroundColor="White" 
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 8"
                            Padding="15">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
                        </Border.Shadow>
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                              ColumnDefinitions="*,*"
                              RowSpacing="10"
                              ColumnSpacing="10">

                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="Rating"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="#666666"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   x:Name="RatedLabel"
                                   FontSize="12"
                                   TextColor="#333333"/>

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="Runtime"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="#666666"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   x:Name="RuntimeLabel"
                                   FontSize="12"
                                   TextColor="#333333"/>

                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="Genre"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="#666666"/>
                            <Label Grid.Row="2" Grid.Column="1"
                                   x:Name="GenreLabel"
                                   FontSize="12"
                                   TextColor="#333333"
                                   LineBreakMode="WordWrap"/>

                            <Label Grid.Row="3" Grid.Column="0"
                                   Text="Released"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="#666666"/>
                            <Label Grid.Row="3" Grid.Column="1"
                                   x:Name="ReleasedLabel"
                                   FontSize="12"
                                   TextColor="#333333"/>
                        </Grid>
                    </Border>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>