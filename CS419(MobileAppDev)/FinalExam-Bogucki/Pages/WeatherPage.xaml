<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalExam_Bogucki.Pages.WeatherPage"
             Title="Local Weather" BackgroundColor="White">
    
    <VerticalStackLayout Padding="0" Spacing="0">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- ### The Activity Indicator ### -->
                <ActivityIndicator x:Name="BusyIndicator" IsVisible="False" IsRunning="False" Color="Blue" VerticalOptions="Center" HorizontalOptions="Center"/>

                <Label x:Name="WeatherLabel" Text="" HorizontalOptions="Center" VerticalOptions="Center" FontSize="18"/>
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>