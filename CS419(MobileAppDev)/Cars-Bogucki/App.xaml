<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cars_Bogucki.App">
    <Application.Resources>
        <ResourceDictionary xmlns:conv="clr-namespace:Cars_Bogucki.Converters">
            <conv:IntToBoolConverter x:Key="IntToBoolConverter" />
            <conv:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <conv:StringEmptyConverter x:Key="StringEmptyConverter" />

            <Color x:Key="PrimaryColor">#512BD4</Color>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>