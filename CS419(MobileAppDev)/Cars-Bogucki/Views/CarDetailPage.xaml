<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cars_Bogucki.Views.CarDetailPage"
             Title="Car Details">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Entry Placeholder="Make" Text="{Binding Car.Make, Mode=TwoWay}" />
            <Entry Placeholder="Model" Text="{Binding Car.Model, Mode=TwoWay}" />
            <Entry Placeholder="Year" Keyboard="Numeric" Text="{Binding Car.Year, Mode=TwoWay}" />
            <Entry Placeholder="Price" Keyboard="Numeric" Text="{Binding Car.Price, Mode=TwoWay}" />
            <Entry Placeholder="Image URL (optional)" Text="{Binding Car.ImageUrl, Mode=TwoWay}" />

            <!-- Image Preview -->
            <Border HeightRequest="200" 
                    StrokeThickness="1" 
                    Stroke="LightGray"
                    BackgroundColor="#F5F5F5"
                    IsVisible="{Binding Car.ImageUrl, Converter={StaticResource StringNotEmptyConverter}}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <Image Source="{Binding Car.ImageUrl}" 
                       Aspect="AspectFit"/>
            </Border>

            <!-- Pick Image Button -->
            <Button Text="Pick Image from Device" 
                    Command="{Binding PickImageCommand}" 
                    BackgroundColor="LightBlue"/>

            <HorizontalStackLayout Spacing="12">
                <Button Text="Save" Command="{Binding SaveCommand}" />
                <Button Text="Delete" 
                       Command="{Binding DeleteCommand}" 
                       IsEnabled="{Binding Car.Id, Converter={StaticResource IntToBoolConverter}, ConverterParameter='gt0'}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>