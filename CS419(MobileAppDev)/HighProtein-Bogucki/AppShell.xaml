<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HighProtein_Bogucki.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HighProtein_Bogucki"
    xmlns:pages="clr-namespace:HighProtein_Bogucki.Pages"
    Title="High Protein Cookbook">


    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Breakfast">
        <Tab>
            <ShellContent
                Title="Breakfast"
                ContentTemplate="{DataTemplate local:Pages.BreakfastPage}"
                Route="BreakfastPage" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Lunch">
        <Tab>
            <ShellContent
                Title="Lunch"
                ContentTemplate="{DataTemplate local:Pages.LunchPage}"
                Route="LunchPage" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Dinner">
        <Tab>
            <ShellContent
                Title="Dinner"
                ContentTemplate="{DataTemplate local:Pages.DinnerPage}"
                Route="DinnerPage" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Snacks">
        <Tab>
            <ShellContent
                Title="Snacks"
                ContentTemplate="{DataTemplate local:Pages.SnacksPage}"
                Route="SnacksPage" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="About">
        <Tab>
            <ShellContent
                Title="About"
                ContentTemplate="{DataTemplate local:Pages.AboutPage}"
                Route="AboutPage" />
        </Tab>
    </FlyoutItem>

</Shell>
