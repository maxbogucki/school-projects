<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoonShot_Bogucki.MainPage"
             BackgroundColor="#020f1f" Title="">
    <VerticalStackLayout Padding="0" Spacing="0" Margin="0">
        <StackLayout Padding="10" Spacing="10" VerticalOptions="Start">
            <Image Source="apollos.png" Aspect="AspectFit" HorizontalOptions="Center" />
        </StackLayout>
        <StackLayout VerticalOptions="End">
            <Border
                BackgroundColor="White"
                Stroke="#020f1f"
                HorizontalOptions="Fill"
                Padding="20" Margin="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24"/>
                </Border.StrokeShape>
                <VerticalStackLayout Padding="10" Spacing="10">
                    <Label
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        FontSize="28"
                        FontAttributes="Bold"
                        Text="Apollo Program" />
                    <Label
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="WordWrap"
                        FontSize="18"
                        Text="Explore the historic missions that took humanity to the Moon and back. Discover the achievements of Apollo 1 through 17."/>
                    <Button
                        Text="Explore Missions"
                        HorizontalOptions="Fill" Clicked="OnMissionClicked" />
                </VerticalStackLayout>
            </Border>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>